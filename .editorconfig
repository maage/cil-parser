# https://EditorConfig.org

root = true

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

[*.{eyaml,toml,yaml,yml}]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab

[*.sh]
indent_size = 4
indent_style = space

[*.pl]
indent_size = 4
indent_style = space
